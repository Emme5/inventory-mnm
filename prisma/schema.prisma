generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  quantity  Int
  imageUrl  String?
  createdAt DateTime @default(now())

  movements StockMovement[]
}

model StockMovement {
  id        String   @id @default(cuid())
  itemId    String
  type      String   // "in" | "out" | "adjust"
  quantity  Int
  createdAt DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id])
}